<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Sofiya Education</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="https://assets.zyrosite.com/cdn-cgi/image/format=auto,w=375,fit=crop,q=95/AMqbBL1qjVHq462L/sofiya-AQEDzMEKXBcneB7G.png" height="40">
            </a>

            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav mx-auto gap-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Program">Program</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Gallery">Gallery</a>
                    </li>
                </ul>

                <a class="btn btn-primary rounded-pill px-4" asp-controller="Home"
                   asp-action="Donation">Donation</a>
            </div>
        </div>
    </nav>

    <!-- ================= PAGE CONTENT ================= -->
    @RenderBody()


    <script>
        const currentPath = window.location.pathname.toLowerCase();
        const navLinks = document.querySelectorAll(".nav-link");

        navLinks.forEach(link => {
          link.classList.remove("active");

          const linkUrl = new URL(link.href);
          const linkPath = linkUrl.pathname.toLowerCase();

          
          if (
            linkPath === currentPath ||
            (linkPath === "/" && currentPath === "/home/index")
          ) {
            link.classList.add("active");
          }
        });
    </script>



    <!-- ================= FOOTER ================= -->
    <footer>
        <div class="container">
            <div class="row g-4">

                <div class="col-md-4">
                    <h6>Education</h6>
                    <p>Empowering villages through quality educational services.</p>
                </div>

                <div class="col-md-4 text-center">
                    <h6>WRITE US</h6>
                    <input class="form-control mb-3" placeholder="Your email for updates">
                    <button class="btn btn-info text-white rounded-pill">
                        Submit your information now
                    </button>
                </div>

                <div class="col-md-4">
                    <h6>CONTACT</h6>
                    <p>
                        Kewtara block masturi district Bilaspur<br>
                        Chhattisgarh 495551 India
                    </p>
                    <p>CALL US +91 - 81095 38074</p>
                    <p>EMAIL US sophiaeducationwelfarsocity@gmail.com</p>
                </div>

            </div>

            <hr class="my-4">
            <p class="text-center">
                © 2026. All rights reserved SOFIYA EDUCATION
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
